<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="@dimen/common_0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_16dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_asseess_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_8dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/action_settings"
            android:textColor="@color/font_h1"
            android:textSize="@dimen/fragment_font_16sp" />



            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_assess_time"
                android:layout_marginTop="@dimen/common_4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="2016.11.20"
                android:textColor="@color/font_h2"
                android:textSize="@dimen/common_14sp" />




    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_assess_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_8dp"
        android:layout_marginRight="@dimen/common_8dp"
        android:background="@drawable/bg_exam_type"
        android:paddingBottom="@dimen/common_4dp"
        android:paddingLeft="@dimen/common_8dp"
        android:paddingRight="@dimen/common_8dp"
        android:paddingTop="@dimen/common_4dp"
        android:text="进行中"
        android:textColor="@color/tab_bgcolor"
        android:textSize="@dimen/common_12sp" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/common_8dp"
        android:background="@drawable/right_go" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="horizontal">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:minEms="5"
        android:text="ceshi"
        android:textColor="@color/font_h1"
        android:textSize="@dimen/fragment_font_16sp"/>

    <LinearLayout
        android:layout_width="@dimen/common_0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_16dp"
        android:layout_marginTop="@dimen/common_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/common_4dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="shijia88888888888888"
            android:textColor="@color/font_h2"
            android:textSize="@dimen/common_14sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/common_4dp"
            android:maxLines="1"
            android:text="@string/action_settings"
            android:textColor="@color/font_h2"
            android:textSize="@dimen/common_14sp"/>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/common_4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="已考0/0"
            android:textColor="@color/font_h2"
            android:textSize="@dimen/common_14sp"/>


    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_state_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_8dp"
        android:layout_marginRight="@dimen/common_8dp"
        android:background="@drawable/bg_exam_type"
        android:paddingBottom="@dimen/common_4dp"
        android:paddingLeft="@dimen/common_8dp"
        android:paddingRight="@dimen/common_8dp"
        android:paddingTop="@dimen/common_4dp"
        android:text="进行中"
        android:textColor="@color/tab_bgcolor"
        android:textSize="@dimen/common_12sp"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/common_8dp"
        android:background="@drawable/right_go"/>

</LinearLayout>